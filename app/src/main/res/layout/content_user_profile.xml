<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lightcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amosmadalinneculau.objects.signupMenu.userProfile"
    tools:showIn="@layout/activity_user_profile">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtname"
        android:contentDescription="Full Name (Optional)"

        android:hint="Name.."
        android:layout_below="@+id/imageProfile"
        android:layout_alignLeft="@+id/txtpassword"
        android:layout_alignStart="@+id/txtpassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtpassword"
        android:contentDescription="Password.."
        android:hint="Password.."
        android:layout_below="@+id/txtname"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtComfirmPassword"
        android:contentDescription="Password.."
        android:hint="Comfirm Password.."
        android:layout_below="@+id/txtpassword"
        android:layout_alignLeft="@+id/txtpassword"
        android:layout_alignStart="@+id/txtpassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/btnnext1"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtDOB"
        android:layout_alignStart="@+id/txtDOB"
        android:layout_marginBottom="36dp"
        android:layout_alignRight="@+id/txtDOB"
        android:layout_alignEnd="@+id/txtDOB" />

    <ImageView
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:id="@+id/imageProfile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDOB"
        android:layout_below="@+id/txtComfirmPassword"
        android:layout_alignRight="@+id/txtComfirmPassword"
        android:layout_alignEnd="@+id/txtComfirmPassword"
        android:hint="DD/MM/YYYY" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spCountry"
        android:layout_below="@+id/txtDOB"
        android:layout_alignLeft="@+id/txtDOB"
        android:layout_alignStart="@+id/txtDOB"
        android:layout_alignRight="@+id/txtDOB"
        android:layout_alignEnd="@+id/txtDOB" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Terms and Condition"
        android:id="@+id/rbtc"
        android:checked="false"
        android:layout_above="@+id/btnnext1"
        android:layout_alignLeft="@+id/btnnext1"
        android:layout_alignStart="@+id/btnnext1" />

</RelativeLayout>
